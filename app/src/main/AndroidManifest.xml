<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.movieapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_movie_placeholder"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_movie_placeholder_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieApp">
        <activity android:name=".MovieDetailsActivity"
            android:label="Details"/>
        <activity android:name=".SetProfileActivity"
            android:label="Edit Profile"/>
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/Theme.MovieApp.NoActionBar" />
        <activity android:name=".SignupActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>